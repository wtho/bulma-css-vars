{
  "compilerOptions": {
    "baseUrl": "src",
    "outDir": "./dist",
    "declarationDir": "./dist",
    "declaration": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2015",
    "noImplicitAny": true,
    "downlevelIteration": true,
    "esModuleInterop": true
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "dist"]
}
